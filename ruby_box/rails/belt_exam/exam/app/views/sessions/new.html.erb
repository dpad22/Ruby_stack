<div class="login" style="margin-left: 200px;">
    <div class="row">
        <div class="col-mid-12">
            <h2>Login</h2>
            <form action="<%= login_path %>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email Address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="user[email]">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="user[password]">
                </div>
                <div class="form_group" >
                    <button type="submit" class="btn btn-secondary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>