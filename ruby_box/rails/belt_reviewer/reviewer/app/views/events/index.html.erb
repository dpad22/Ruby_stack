<h2>Welcome, <%= current_user.first_name %>!</h2>
<%
=begin%>
All Events in Our State
<%
=end%>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Post</th>
            <th>Action/Status</th>
        </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
        <tr>
            <td> <%= event.name %> </td>
            <td> <%= event.date %> </td>
            <td> <%= event.city %> </td>
            <td> <%= event.user.first_name %> </td>
            <td>
                <!-- Actions -->

            </td>
        </tr>
    <% end %>
    </tbody>
</table>




    <div class="register">
